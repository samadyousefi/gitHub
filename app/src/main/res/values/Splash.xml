<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.MyApp.MySplash" parent="Theme.Github">
<!--        <item name="android:windowSplashScreenBackground">#FFFFFFF</item>-->
        <item name="windowSplashScreenAnimatedIcon">@drawable/git</item>
        <item name="android:background">@color/purple_200</item>
        <item name="postSplashScreenTheme">@style/Theme.Github</item>
    </style>

        <style name="Theme.App.Starting" parent="Theme.SplashScreen">
            <!-- Set the splash screen background, animated icon, and animation duration. -->
            <item name="windowSplashScreenBackground">@color/black</item>

            <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an
                 animated drawable. One of these is required. -->
            <item name="windowSplashScreenAnimatedIcon">@drawable/git</item>
            <item name="splashScreenIconSize">@android:dimen/app_icon_size</item>
            <!-- Required for animated icons -->
            <item name="windowSplashScreenAnimationDuration">400</item>

            <!-- Set the theme of the Activity that directly follows your splash screen. -->
            <!-- Required -->
            <item name="postSplashScreenTheme">@style/Theme.Github</item>
        </style>
</resources>